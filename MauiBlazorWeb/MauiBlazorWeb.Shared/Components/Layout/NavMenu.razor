                    </svg>
                    Statistics
                </NavLink>
            </div>
        }
        
        <div class="nav-item px-3 border-top mt-auto">
            <DropUp @ref="dropup"/>
        </div>
    </nav>
</div>

@code
{
    private DropUp dropup = new();

    public async Task RerenderNavMenu()
    {
        await InvokeAsync(dropup.RerenderDropUp);
        await InvokeAsync(StateHasChanged);
    }
}