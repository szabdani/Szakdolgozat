	public DiaryCalendar()
	{
		IsHabit = false;
		uniqueDates = new List<DateTime>();
	}

	protected override async Task UpdateTables()
	{
		await base.UpdateTables();
		uniqueDates = allPosts.Select(obj => obj.Date).Distinct().ToList();
	}

